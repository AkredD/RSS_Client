<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ifmo.rain.mikhailov.rss_client">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FragmentSettings">
            <intent-filter>
                <action android:name="rembo.network.urss.FragmentSettings" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PrefActivity">
            <intent-filter>
                <action android:name="ifmo.rain.mikhailov.Settings" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".RSSItemDisplayer" android:label="Display Rss Item">
            <intent-filter>
                <action android:name="ifmo.rain.mikhailov.displayRssItem" />
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>

        <service android:name=".BackgroundDownloadService" android:label="TOPKEK">
            <intent-filter>
                <action android:name="ifmo.rain.mikhailov.startServiceDownload" />
            </intent-filter>
        </service>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>